<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
    <Frame name="DohBidFrame" parent="UIParent" movable="true" enableMouse="true" hidden="true">
        <Size>
            <AbsDimension x="200" y="75" />
        </Size>
        <Anchors>
            <Anchor point="CENTER" />
        </Anchors>
        <Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
            <Color r="0" g="0" b="0" />
            <BackgroundInsets>
                <AbsInset left="11" right="12" top="12" bottom="11" />
            </BackgroundInsets>
            <TileSize>
                <AbsValue val="32" />
            </TileSize>
            <EdgeSize>
                <AbsValue val="32" />
            </EdgeSize>
        </Backdrop>
        <Frames>
          <Button name="DohFrameButtonHalf" text="Half (123)" inherits="GameMenuButtonTemplate">
                <Anchors>
                    <Anchor point="BOTTOM" relativeTo="DohBidFrame" relativePoint="BOTTOM">
                        <Offset>
                            <AbsDimension x="0" y="10" />
                        </Offset>
                    </Anchor>
                </Anchors>
            </Button>
            <Button name="DohFrameButtonFixed" text="Fixed (100)" inherits="GameMenuButtonTemplate">
                <Anchors>
                    <Anchor point="TOP" relativeTo="DohFrameButtonHalf" relativePoint="BOTTOM">
                    </Anchor>
                </Anchors>
            </Button>
            <Button name="DohFrameButtonMS" text="Main spec" inherits="GameMenuButtonTemplate">
                <Anchors>
                    <Anchor point="TOP" relativeTo="DohFrameButtonFixed" relativePoint="BOTTOM">

                    </Anchor>
                </Anchors>
            </Button>
            <Button name="DohFrameButtonDS" text="Dual spec" inherits="GameMenuButtonTemplate">
                <Anchors>
                    <Anchor point="TOP" relativeTo="DohFrameButtonMS" relativePoint="BOTTOM">

                    </Anchor>
                </Anchors>
            </Button>

            <Button name="DohFrameButtonOS" text="Off spec" inherits="GameMenuButtonTemplate">
                <Anchors>
                    <Anchor point="TOP" relativeTo="DohFrameButtonDS" relativePoint="BOTTOM">

                    </Anchor>
                </Anchors>
            </Button>

        </Frames>
      
    </Frame>
</Ui>